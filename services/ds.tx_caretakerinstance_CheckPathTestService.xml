<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<ROOT>
		<TCEforms> 
			<sheetTitle>Default</sheetTitle> 
		</TCEforms> 
		<type>array</type>
		<el>
			<cptype>
				<TCEforms>
					<label>Type</label>
					<config>
						<type>select</type>
					    <items>
					    	<numIndex index="0">
					    		<numIndex index="0">does not matter</numIndex>
								<numIndex index="1"></numIndex>
					    	</numIndex>
					    	<numIndex index="1">
					    		<numIndex index="0">should be a file</numIndex>
								<numIndex index="1">file</numIndex>
					    	</numIndex>
					    	<numIndex index="2">
					    		<numIndex index="0">should be a folder</numIndex>
								<numIndex index="1">folder</numIndex>
					    	</numIndex>
					  </items>
					  <default>0</default>
					</config>
				</TCEforms>
			</cptype>
			
			<cppaths>
				<TCEforms>
					<label>Paths to test (one path per line)</label>
					<config>
						<type>text</type>
					</config>
				</TCEforms>
			</cppaths>
			
			<cpinverse>
				<TCEforms>
					<label>should NOT exist</label>
					<config>
						<type>check</type>
					</config>
				</TCEforms>
			</cpinverse>

			<cptimeflag>
				<TCEforms>
					<label>should be young/older</label>
					<config>
						<type>select</type>
						<items>
							<numIndex index="0">
								<numIndex index="0">does not matter</numIndex>
								<numIndex index="1"></numIndex>
							</numIndex>
							<numIndex index="1">
								<numIndex index="0">error, if younger than...</numIndex>
								<numIndex index="1">younger</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">error, if older than...</numIndex>
								<numIndex index="1">older</numIndex>
							</numIndex>
							</items>
							<default>0</default>
					</config>
				</TCEforms>
			</cptimeflag>

			<cptime>
				<TCEforms>
					<label>age compare seconds</label>
					<config>
						<type>input</type>
						<size>5</size>
						<default>0</default>
						<eval>int</eval>
					</config>
				</TCEforms>
			</cptime>
		</el>
	</ROOT>
</T3DataStructure>
