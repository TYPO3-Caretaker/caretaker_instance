<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <ROOT>
        <TCEforms>
            <sheetTitle>Default</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>

            <check_extension_locations>
                <TCEforms>
                    <label>Which extension-locations should be checked</label>
                    <config>
                        <type>check</type>
                        <items>
                            <numIndex index="0">
                                <numIndex index="0">System</numIndex>
                                <numIndex index="1"></numIndex>
                            </numIndex>
                            <numIndex index="1">
                                <numIndex index="0">Global</numIndex>
                                <numIndex index="1"></numIndex>
                            </numIndex>
                            <numIndex index="2">
                                <numIndex index="0">Local</numIndex>
                                <numIndex index="1"></numIndex>
                            </numIndex>
                        </items>
                        <default>4</default>
                        <cols>3</cols>
                    </config>
                </TCEforms>
            </check_extension_locations>

            <status_of_updateable_extensions>
                <TCEforms>
                    <label>Status of outdated extensions (newer version in TER)</label>
                    <config>
                        <type>select</type>
                        <items>
                            <numIndex index="0">
                                <numIndex index="0">OK</numIndex>
                                <numIndex index="1">0</numIndex>
                            </numIndex>
                            <numIndex index="1">
                                <numIndex index="0">Warning</numIndex>
                                <numIndex index="1">1</numIndex>
                            </numIndex>
                            <numIndex index="2">
                                <numIndex index="0">Error</numIndex>
                                <numIndex index="1">2</numIndex>
                            </numIndex>
                        </items>
                        <default>1</default>
                    </config>
                </TCEforms>
            </status_of_updateable_extensions>

            <custom_extkey_whitlelist>
                <TCEforms>
                    <label>Custom Extension Key Whitelist (those extensions are allowed to be out of date)</label>
                    <config>
                        <type>text</type>
                    </config>
                </TCEforms>
            </custom_extkey_whitlelist>

            <ignore_extension_version_suffix>
                <TCEforms>
                    <label>Should extension version suffixes (e.g. "_mod") be ignored?</label>
                    <config>
                        <type>check</type>
                    </config>
                </TCEforms>
            </ignore_extension_version_suffix>

            <ignore_major_extension_version>
                <TCEforms>
                    <label>Should major extension versions be ignored?</label>
                    <config>
                        <type>check</type>
                    </config>
                </TCEforms>
            </ignore_major_extension_version>

            <only_for_running_typo3_version>
                <TCEforms>
                    <label>Should extension versions not for running TYPO3 version be ignored?</label>
                    <config>
                        <type>check</type>
                    </config>
                </TCEforms>
            </only_for_running_typo3_version>
        </el>
    </ROOT>
</T3DataStructure>
